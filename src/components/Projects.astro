
---

import BootstrapIcon from './icons/BootstrapIcon.astro'
import GithubIcon from './icons/GithubIcon.astro'
import ReactIcon from './icons/ReactIcon.astro'
import ViteIcon from './icons/ViteIcon.astro'
import WebpageIcon from './icons/WebpageIcon.astro'

import { getI18n } from "../I18n";

const { currentLocale } = Astro
const i18n = getI18n({ currentLocale }) as { [key: string]: string };

const TAGS = {
        REACT: {
            name: 'React',
            color: 'bg-[#24272f]',
            icon: ReactIcon
        },
        BOOTSTRAP: {
            name: 'Bootstrap',
            color: 'bg-[#c2a0e8] text-black',
            icon: BootstrapIcon
        },
        VITE: {
            name: 'Vite',
            color: 'bg-white text-black',
            icon: ViteIcon
        }
    }

const PROJECTS = [
    {
        title: i18n.PRO_SUMM_TITLE,
        description:  i18n.PRO_SUMM_DESC,
        image: '/projects/summonerDataImage.webp',
        link: 'https://summoner-data.vercel.app/',
        github: 'https://github.com/Gorosss/summonerData',
        tags: [TAGS.REACT, TAGS.BOOTSTRAP]
    },
    {
        title:  i18n.PRO_ECO_TITLE,
        description: i18n.PRO_ECO_DESC,
        image: '/projects/onlineStoreImage.webp',
        link: 'https://goros-online-store.vercel.app/',
        github: 'https://github.com/Gorosss/online-store',
        tags: [TAGS.REACT, TAGS.VITE]
    }
]
---


{
    PROJECTS.map(({title, description , image , link , tags, github}) => {
        return (
            <article class="mb-5">
                <h2 class="text-2xl bold pb-2">{title}</h2>

                {
                    tags && (
                        <ul class="flex gap-3 my-3">
                            {tags.map(
                                tag => <li>
                                    <span class=`flex p-1 px-2 gap-x-2 rounded-full text-xs ${tag.color}`>
                                        <tag.icon class="w-4 h-4" />
                                    {tag.name}
                                    </span>
                                    
                                    </li>)
                            
                        }
                        </ul>
                    )
                }
                <p class="mb-4 text-base font-normal text-gray-300 text-pretty">{description}</p>
               
                <div class="flex gap-3 my-3">
                    <a href={link} rel="noopener noreferrer" class="inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 text-base text-white transition bg-gray-800 border border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">
                        <WebpageIcon />  {i18n.PRO_WB_TAG}</a>
                <a href={github} rel="noopener noreferrer" class="inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 text-base text-white transition bg-gray-800 border border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">
                     <GithubIcon />Github</a>
                </div>
                

                <img class="rounded-lg shadow-xl shadow-black/10 " src={image} alt="project image" />
            </article>
        )
    })
}
