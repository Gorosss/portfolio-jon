---
import Layout from '../layouts/Layout.astro';

import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GithubIcon from '../components/icons/Github.astro';
import GmailIcon from '../components/icons/Gmail.astro';

import Badge from '../components/Badge.astro';
import SocialBadge from '../components/SocialBadge.astro';
---

<Layout title="Welcome to Astro.">
	<main >
		<section class="w-full mx-auto lg:w-[740px] py-44">
			<img 
			class="rounded-full size-14 mb-4" 
			src="https://media.licdn.com/dms/image/D4D03AQELuOTzPR8gkQ/profile-displayphoto-shrink_200_200/0/1694444689623?e=1712188800&v=beta&t=SBJ-AzK2T8PNOdHiZmnIXDH4I34qcHSPd2VHKtfXyqg" 
			alt="Foto Jon"
			/>
			<h1 class="text-gray-900 dark:text-white text-2xl md:text-3xl lg:text-4xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-8">
				Hola, soy Jon Gorostegui 
				<Badge href="https://www.linkedin.com/in/jon-gorostegui-martinez-a0571a247/">
					Abierto a ofertas laborales 
				</Badge> 
			</h1>

			<h3 class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white pb-6 lg:pb-8">
				Soy Licenciado en Ingeniería del Software, me gusta el Desarrollo Web y la Programación en general. Del Pais Vasco, España.
			</h3>

			<nav class="flex gap-x-4">			
				<SocialBadge href="https://www.linkedin.com/in/jon-gorostegui-martinez-a0571a247/">
					<LinkedInIcon class="w-6 h-6"/>
					LinkedIn
				
				</SocialBadge>
				<SocialBadge href="https://github.com/Gorosss">
					<GithubIcon class="w-6 h-6"/>
					Github
				
				</SocialBadge>
				<SocialBadge href="mailto:jongorostegui@gmail.com">
					<GmailIcon class="w-6 h-6"/>
					jongorostegui@gmail.com				
				</SocialBadge>
			</nav>	
		</section>
	</main>
</Layout>
